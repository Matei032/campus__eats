@page "/cart"
@using CampusEats.Frontend.Services
@using CampusEats.Frontend.Models
@using CampusEats.Frontend.Models.Requests
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@using System.Threading.Tasks

@inject CartService CartService
@inject ApiClient Api
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Coșul Meu - CampusEats</PageTitle>

<div class="container mt-4">
    <h2 class="mb-4">Coșul de Cumpărături</h2>

    @if (CartService.Items.Count == 0)
    {
        <div class="alert alert-info text-center">
            Coșul tău este gol. <a href="menu" class="alert-link">Vezi Meniul</a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        @foreach (var item in CartService.Items)
                        {
                            <div class="d-flex justify-content-between align-items-center border-bottom py-3">
                                <div>
                                    <h5 class="mb-1">@item.Name</h5>
                                    <small class="text-muted">Preț unitar: @item.UnitPrice.ToString("F2") RON</small>
                                </div>
                                <div class="d-flex align-items-center">
                                    <input type="number" class="form-control form-control-sm me-3" style="width: 70px;" 
                                           value="@item.Quantity" 
                                           min="1"
                                           @onchange="@(async (e) => await UpdateQty(item, e))" />
                                    
                                    <span class="fw-bold me-4" style="width: 80px; text-align: right;">
                                        @item.Subtotal.ToString("F2") RON
                                    </span>
                                    
                                    <button class="btn btn-outline-danger btn-sm" @onclick="async () => await CartService.Remove(item.ProductId)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Sumar Comandă</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-3">
                            <span>Total Produse:</span>
                            <span class="fw-bold">@CartService.Total.ToString("F2") RON</span>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Metodă Plată</label>
                            <select class="form-select" @bind="PaymentMethod">
                                <option value="Cash">Cash la livrare</option>
                                <option value="Card">Card (Online/Terminal)</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Observații (Opțional)</label>
                            <textarea class="form-control" rows="2" @bind="OrderNotes" placeholder="Ex: Fără tacâmuri, interfon 05..."></textarea>
                        </div>

                        @if (!string.IsNullOrEmpty(ErrorMessage))
                        {
                            <div class="alert alert-danger small">@ErrorMessage</div>
                        }

                        <button class="btn btn-success w-100 py-2" @onclick="HandleCheckout" disabled="@IsProcessing">
                            @if (IsProcessing)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                                <span>Se procesează...</span>
                            }
                            else
                            {
                                <span>Finalizează Comanda</span>
                            }
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private string PaymentMethod = "Cash";
    private string OrderNotes = "";
    private bool IsProcessing = false;
    private string ErrorMessage = "";

    protected override async Task OnInitializedAsync()
    {
        CartService.OnChange += StateHasChanged;
        // Sincronizăm prețurile cu serverul (dacă metoda există în CartService)
        // await RefreshPrices(); 
    }

    public void Dispose()
    {
        CartService.OnChange -= StateHasChanged;
    }

    private async Task UpdateQty(CartItem item, ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out int qty))
        {
            await CartService.UpdateQty(item.ProductId, qty);
        }
    }

    private async Task HandleCheckout()
    {
        IsProcessing = true;
        ErrorMessage = "";

        // 1. Verificăm autentificarea
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated != true)
        {
            ErrorMessage = "Trebuie să fii autentificat pentru a plasa comanda.";
            IsProcessing = false;
            return;
        }

        // 2. Extragem ID-ul utilizatorului (Esențial pentru Backend)
        var userIdClaim = user.FindFirst(c => c.Type == "sub") ?? 
                          user.FindFirst(c => c.Type == ClaimTypes.NameIdentifier);
        
        if (userIdClaim == null || !Guid.TryParse(userIdClaim.Value, out Guid userId))
        {
            ErrorMessage = "Eroare de sesiune. Te rugăm să te reloghezi.";
            IsProcessing = false;
            return;
        }

        // 3. Construim obiectul comenzii
        var command = new CreateOrderCommand
        {
            UserId = userId,
            PaymentMethod = PaymentMethod, // "Cash" sau "Card"
            Notes = OrderNotes,
            Items = CartService.Items.Select(i => new OrderItemRequest
            {
                ProductId = i.ProductId,
                Quantity = i.Quantity,
                SpecialInstructions = "" // Poți adăuga câmp în UI per produs
            }).ToList()
        };

        try 
        {
            // 4. LOGICA DE PLATĂ
            if (PaymentMethod == "Cash")
            {
                // Pentru Cash, trimitem comanda direct
                var order = await Api.CreateOrderAsync(command);
                
                if (order != null)
                {
                    await CartService.Clear();
                    NavigationManager.NavigateTo("/orders"); // Sau o pagină de succes
                }
                else
                {
                    ErrorMessage = "Nu am putut plasa comanda. Verifică consola pentru detalii.";
                }
            }
            else if (PaymentMethod == "Card")
            {
                // Aici vei pune logica de Stripe (redirecționare sau componentă)
                // Deocamdată, simulăm plasarea comenzii ca "Pending Payment"
                var order = await Api.CreateOrderAsync(command);
                if (order != null)
                {
                    await CartService.Clear();
                    // Redirecționare către pagina de plată (dacă ai implementat-o)
                    // NavigationManager.NavigateTo($"/payment/{order.Id}");
                    NavigationManager.NavigateTo("/orders");
                }
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Eroare: {ex.Message}";
        }
        finally
        {
            IsProcessing = false;
        }
    }
}