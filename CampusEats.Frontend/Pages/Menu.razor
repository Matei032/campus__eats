@page "/menu"
@inject ApiClient Api
@inject CartService Cart

<h3 class="mb-3">Menu</h3>

@if (_loading)
{
    <p>Loading...</p>
}
else if (_error is not null)
{
    <div class="alert alert-danger">@_error</div>
}
else
{
    foreach (var group in _grouped)
    {
        <h5 class="mt-4">@group.Key</h5>
        <div class="row g-3">
            @foreach (var p in group)
            {
                <div class="col-12 col-sm-6 col-lg-4">
                    <div class="card h-100">
                        @if (!string.IsNullOrWhiteSpace(p.ImageUrl))
                        {
                            <img class="card-img-top" src="@p.ImageUrl" alt="@p.Name" />
                        }
                        <div class="card-body d-flex flex-column">
                            <h6 class="card-title mb-1">@p.Name</h6>
                            <p class="text-muted small flex-grow-1">@p.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="fw-bold">@p.Price.ToString("0.00") RON</span>
                                <button class="btn btn-danger btn-sm" @onclick="() => Add(p)">Add</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
}

@code {
    List<ProductDto> _products = new();
    ILookup<string, ProductDto> _grouped = null!;
    bool _loading = true;
    string? _error;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _products = await Api.GetMenuAsync() ?? new();
            _grouped = _products.ToLookup(p => string.IsNullOrWhiteSpace(p.Category) ? "Other" : p.Category);
        }
        catch (Exception ex) { _error = ex.Message; }
        finally { _loading = false; }
    }

    void Add(ProductDto p) => Cart.Add(p);
}